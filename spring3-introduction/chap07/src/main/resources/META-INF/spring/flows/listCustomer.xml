<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" start-state="list">

	<view-state id="list" view="listCustomer/list">
	   <on-render>
	       <evaluate expression="customerService.findAll()" result="flashScope.customerList"/>
	   </on-render>
	   <transition on="list" to="list"/>
	   <transition on="edit" to="edit"/>
	</view-state>

    <subflow-state id="edit" subflow="editCustomer">
        <input name="customerId" value="requestParameters.id"/>
        <output name="edited" value="flashScope.editedCustomer"/>
        <transition on="edited" to="list"/>
        <transition on="canceled" to="list"/>
    </subflow-state>

</flow>